<% include ./partials/header %>
<div class="ui grid container centered" id="show-post">
  <div class="eight wide centered row">
    <div class="ui huge header show-post"> <%= blog.title %> </div>
  </div>
  <div class="eight wide centered row">
    <img class="ui centered bordered image" id="blog-image-place" src="<%= blog.image%>">
  </div>
  <div class="four wide centered row">
    <span><%= blog.createDate.toDateString() %></span>
  </div>

  <div class="fourteen wide column">
    <p><%- blog.body %></p>
  </div>

  <div class="sixteen wide centered row">

  </div>

</div>

<div class="ui grid centered">
  <div class="sixteen wide centered row">
            <div class="edit-delete-post">
                <form action="/blogs/<%=blog.id%>?_method=DELETE"  method="POST" id="deleteForm">
                    <button class="ui tiny secondary basic button">Delete</button> 
                    <a href="/blogs/<%=blog.id%>/edit" class="ui tiny secondary basic button">Edit</a>
                </form>
            </div>
  </div>
</div>

<script>
    // If there is no blog image
    if(<%- JSON.stringify(blog.image)%>.length < 1) {
       const imagePlace = document.getElementById("blog-image-place");
       imagePlace.parentNode.removeChild(imagePlace);
    }
</script>

<% include ./partials/footer %>